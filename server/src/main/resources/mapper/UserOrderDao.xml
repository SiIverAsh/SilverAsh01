<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.app.homestay.mapper.UserOrderMapper">

    <resultMap id="orders" type="com.app.homestay.domain.OrderInfo">
        <result column="uid" property="uid"/>
        <result column="username" property="username"/>
        <result column="introduce" property="introduce"/>
        <result column="original_price" property="original_price"/>
        <result column="discount_price" property="discount_price"/>
        <result column="address" property="address"/>
        <result column="house_img" property="house_img"/>
        <result column="create_time" property="create_time"/>
        <result column="pay_status" property="pay_status"/>
        <result column="order_num" property="order_num"/>
    </resultMap>

    <!--    添加-->
    <insert id="add" parameterType="orderInfo">
        insert into order_table
        values(#{uid},#{username},#{introduce},#{original_price},#{discount_price},#{address},#{house_img},#{create_time},#{pay_status},#{order_num})
    </insert>


    <select id="query" parameterType="orderInfo" resultMap="orders">

        select * from order_table where username =#{username} and pay_status=#{pay_status} order by uid desc
    </select>

    <!--    查询所有用户订单-->
    <select id="queryAll" parameterType="orderInfo" resultMap="orders">

        select * from order_table order by uid desc
    </select>


    <!--    删除订单-->
    <delete id="del" parameterType="java.lang.Integer">

        delete from order_table where uid=#{uid}

    </delete>

    <update id="pay" parameterType="orderInfo">

        update order_table
        <trim prefix="set" suffixOverrides=",">
            <if test="username!=null">username=#{username},</if>
            <if test="introduce!=null">introduce=#{introduce},</if>
            <if test="original_price!=null">original_price=#{original_price},</if>
            <if test="discount_price!=null">discount_price=#{discount_price},</if>
            <if test="address!=null">address=#{address},</if>
            <if test="house_img!=null">house_img=#{house_img},</if>
            <if test="create_time!=null">create_time=#{create_time},</if>
            <if test="pay_status!=null">pay_status=#{pay_status},</if>
            <if test="order_num!=null">order_num=#{order_num},</if>
        </trim>

        where uid=#{uid}
    </update>


</mapper>